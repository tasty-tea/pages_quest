<h1>Editing Page</h1>

<%= form_for @page, as: :page, url: "/#{@page.path}", method: :patch do |form| %>
  <% if @page.errors.any? %>
	<div id="error_explanation">
	  <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

	  <ul>
	  <% @page.errors.full_messages.each do |message| %>
	    <li><%= message %></li>
	  <% end %>
	  </ul>
	</div>
  <% end %>

  <div class="field">
    <%= form.label :head %>
    <%= form.text_field :head %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="actions">
	<%= form.hidden_field :path, :value => @page.path %>
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', '/' %>
